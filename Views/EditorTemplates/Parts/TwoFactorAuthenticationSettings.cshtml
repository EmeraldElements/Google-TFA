@model EmeraldElements.TwoFactorAuthentication.Models.TwoFactorAuthenticationSettingsPart
@{
    
}

<fieldset>
    <legend>@T("Two-Factor Authentication")</legend>
    <div>
        @Html.EditorFor(m => m.RequireTFA)
        <label for="@Html.FieldIdFor(m => m.RequireTFA)" class="forcheckbox">@T("Require TFA")</label>
        @Html.ValidationMessage("RequireTFA", "*")
        <span class="hint">@T("Check to require users to set up two-factor authentication.")</span>
    </div>
    @if (Model.SMSFeatureEnabled)
    {
        <div>
            @Html.EditorFor(m => m.EnableBackupSMS)
            <label for="@Html.FieldIdFor(m => m.EnableBackupSMS)" class="forcheckbox">@T("Enable Backup SMS")</label>
            @Html.ValidationMessage("EnableBackupSMS", "*")
            <span class="hint">@T("Check to enable users to set up backup sms.")</span>
        </div>
        <div data-controllerid="@Html.FieldIdFor(m => m.EnableBackupSMS)">
            <div>
                @Html.EditorFor(m => m.RequireBackupSMS)
                <label for="@Html.FieldIdFor(m => m.RequireBackupSMS)" class="forcheckbox">@T("Require Backup SMS")</label>
                @Html.ValidationMessage("RequireBackupSMS", "*")
                <span class="hint">@T("Check to require users to set up backup sms.")</span>
            </div>
        </div>
    }
</fieldset>